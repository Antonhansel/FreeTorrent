{
    "name": "FreeTorrent",
    "version": "0.0.1",
    "manifest_version": 2,
    "devtools_page": "devtools.html",
    "browser_action": {
    	"default_icon": {
	        "19": "icons/19x19.png",
	        "38": "icons/38x38.png"
        },
        "default_title": "Enhance your Put.io experience",
        "default_popup": "popup.html"
    },
    "background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
    }]
}
